{
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss",
        "sass",
    ],
    "files.eol": "\n",
    "files.associations": {
        "*.css": "tailwindcss",
        "*.scss": "scss"
    },
    "editor.quickSuggestions": {
        "strings": true
    },
    "scss.lint.unknownAtRules": "ignore",
    "eslint.format.enable": true,
}